@model Product
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4 class="text-start">
            @Model.Name
            <span class="bg-dark text-white p-1" style="float:right; border-radius: 15px"><h6>@string.Format($"{Model.Price:C2}")</h6></span>
        </h4>
    </div>
    <form id="@Model.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">Add To Cart</button>
        </span>
    </form>
</div>
